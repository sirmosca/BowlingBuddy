<Window x:Class="BowlingStats.UI.ConfigureWeeksView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Make changes to weeks" Height="300" Width="300">
    <Grid>
        <DataGrid Name="Weeks" AutoGenerateColumns="False" HorizontalAlignment="Stretch" Margin="8,8,8,41" VerticalAlignment="Stretch" CanUserAddRows="True" CanUserDeleteRows="True" CanUserReorderColumns="True">
            <DataGrid.Columns>
                <DataGridTextColumn Binding="{Binding WeekNumber}" Header="Week #" />
                <DataGridTextColumn Binding="{Binding Description}" Header="Description" />
            </DataGrid.Columns>
        </DataGrid>
        <Button Content="Save" Height="23" HorizontalAlignment="Right" Margin="0,0,8,12" Name="SaveWeeks" VerticalAlignment="Bottom" Width="75" />
    </Grid>
</Window>
